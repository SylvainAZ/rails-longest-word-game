<h1>New Game</h1>
<div class="play_board">
  <% @sample.each do |letter| %>
  <div class="letter">
    <p>
      <%= letter %>
    </p>
  </div>
  <% end %>
</div>
<div class="user-field">
  <p>What is the longest word you can find?</p>
  <form action="/score" method="post">
    <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
    <%= hidden_field_tag :sample, @sample %>
    <input type="text" name="word" placeholder="your word">
    <input type="submit">
  </form>
</div>